<%- model_class = Car -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>

      <th><%= model_class.human_attribute_name(:brand) %></th>
      <th><%= model_class.human_attribute_name(:genus) %></th>
      <th><%= model_class.human_attribute_name(:gearbox) %></th>
      <th><%= model_class.human_attribute_name(:version) %></th>
      <th><%= model_class.human_attribute_name(:yop) %></th>
      <th><%= model_class.human_attribute_name(:available) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', default: t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @cars.each do |car| %>
      <tr>

          <td><%= car.brand %></td>
          <td><%= car.genus %></td>
          <td><%= car.gearbox %></td>
          <td><%= car.version %></td>
          <td><%= car.yop %></td>
          <td><%= car.available %></td>
          <td><%= car.image %></td>
        <td><%=l car.created_at, format: :long %></td>
        <td>
          <%= link_to car_path(car), class: 'btn btn-xs', title: "#{ t('.show', default: t('helpers.links.show')) }" do %>

          <%- end -%>
          <%= link_to edit_car_path(car), class: 'btn btn-xs', title: "#{ t('.edit', default: t('helpers.links.edit')) }" do %>

          <%- end -%>
          <%= link_to car_path(car), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs', title: "#{ t('.destroy', default: t('helpers.links.destroy')) }" do %>

          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', default: t("helpers.links.new")),
            new_car_path,
            class: 'btn btn-primary' %>
