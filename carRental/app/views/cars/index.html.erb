<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Marka</th>
      <th>Rodzaj</th>
      <th>Typ skrzyni biegow</th>
      <th>Model</th>
      <th>Rok produkcji</th>
      <th>Dostepnosc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.brand %></td>
        <td><%= car.genus %></td>
        <td><%= car.gearbox %></td>
        <td><%= car.version %></td>
        <td><%= car.yop %></td>
        <td><%= car.available %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Comments',:controller => :comments, :action => :new, :id =>car.id%></td>
      </tr>
    <% end %>
  </tbody>
</table>

