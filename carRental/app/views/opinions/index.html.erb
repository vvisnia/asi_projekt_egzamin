<p id="notice"><%= notice %></p>

<h1>Opinions about our company</h1>
<p>Only registered users can express their opinions.</p>
<%= will_paginate @opinions %>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opinions.each do |opinion| %>
      <tr>
        <td><%= opinion.user %></td>
        <td><%= opinion.title %></td>
        <td><%= opinion.content %></td>
        <td><%= link_to 'Show', opinion %></td>
        <td><% if current_user && opinion.user == current_user %><%= link_to 'Edit', edit_opinion_path(opinion) %><% end %></td>
<td><% if current_user && opinion.user == current_user %><%= link_to 'Delete', opinion, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user %> <%= link_to 'New Opinion', new_opinion_path %>
<% end %>
